{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TOSS MCP Manifest Schema",
  "type": "object",
  "required": ["version", "generatedAt", "documentationHash", "resourceCount", "toolCount", "resources", "tools"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of MCP manifest"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of generation"
    },
    "documentationHash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of all documentation content"
    },
    "resourceCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of documentation resources"
    },
    "toolCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of MCP tools"
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["uri", "name", "mimeType", "contentHash"],
        "properties": {
          "uri": {
            "type": "string",
            "pattern": "^toss://docs/",
            "description": "Unique resource identifier"
          },
          "name": {
            "type": "string",
            "description": "Human-readable resource name"
          },
          "description": {
            "type": "string",
            "description": "Resource description"
          },
          "mimeType": {
            "type": "string",
            "enum": ["text/markdown", "application/json"],
            "description": "Content type"
          },
          "contentHash": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA-256 hash of resource content"
          },
          "lastModified": {
            "type": "string",
            "format": "date-time"
          },
          "size": {
            "type": "integer",
            "minimum": 0
          },
          "category": {
            "type": "string",
            "enum": ["contracts", "processes", "governance", "tokenomics", "architecture", "investor", "technical", "mcp", "general"]
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "schemaUri", "relatedDocs"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^toss_[a-z_]+$"
          },
          "description": {
            "type": "string"
          },
          "schemaUri": {
            "type": "string",
            "pattern": "^toss://schemas/"
          },
          "relatedDocs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^toss://docs/"
            }
          }
        }
      }
    }
  }
}

