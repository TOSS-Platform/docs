{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install",
  "framework": "docusaurus",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "NODE_VERSION": "24.1.0",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_VERSION": "24.1.0"
    }
  },
  "github": {
    "enabled": true,
    "autoAlias": true
  },
  "regions": ["iad1"],
  "functions": {
    "api/**": {
      "runtime": "nodejs24.x"
    }
  }
}
